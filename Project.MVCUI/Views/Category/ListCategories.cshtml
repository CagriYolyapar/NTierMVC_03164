@model CategoryListPageVM


@{
    ViewBag.Title = "ListCategories";
}

<th>Yeni kategori eklemek icin @Html.ActionLink("tıklayınız","AddCategory")</th>

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori Ismi</th>
        <th>Aciklamasi</th>
        <th>Durum</th>
        <th colspan="2" style="text-align:center;padding-right:80px">Islemler</th>
    </tr>

    @foreach (CategoryVM item in Model.Categories)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td>@Html.ActionLink("Guncelle", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Sil", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>

